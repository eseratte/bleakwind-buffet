<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="195">
   
    
    
    <DockPanel Background="White">
        <ListView>
            <TextBlock Text="{Binding Path=Number}"></TextBlock>
            <TextBlock Text="{Binding Path=Name}"></TextBlock>
            <TextBlock Text="{Binding Path=Price}"></TextBlock>
            <Label>Item instructions go here</Label>
            <Label>-----------------------------------</Label>
            <Label>Order subtotal goes here</Label>
            <Label>Order tax goes here</Label>
            <Label>Order total goes here</Label>

        </ListView>

    </DockPanel>
</UserControl>
