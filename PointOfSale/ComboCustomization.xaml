<UserControl x:Class="PointOfSale.ComboCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button FontSize="20">Change Entree</Button>
        <Button FontSize="20" Grid.Row="1">Change Side</Button>
        <Button FontSize="20" Grid.Row="2">Change Drink</Button>
        <Button FontSize="20" Grid.Column="1">Customize Entree</Button>
        <Button FontSize="20" Grid.Row="1" Grid.Column="1">Customize Side</Button>
        <Button FontSize="20" Grid.Row="2" Grid.Column="1">Customize Drink</Button>
        <Button FontSize="20" Grid.Row="3" Grid.ColumnSpan="2">Go Back</Button>
    </Grid>
</UserControl>
